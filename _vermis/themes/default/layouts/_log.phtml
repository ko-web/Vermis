<div class="log">
    <?php foreach ($this->log as $entry): ?>
        <div class="entry <?= $entry['action'] ?>">
            <div class="date"><?= $this->date($entry['time']) ?></div>
            <div class="content">
                <?= $this->userLink($entry['user']['slug'], $entry['user']['name']) ?>
                <?= _T($entry['resource_type'].' '.$entry['action']) ?>
                <a href="<?= $this->logUrl($entry['resource_type'], $entry['params']) ?>"><?= $this->escape($entry['message']) ?></a>
                <?php if ($entry['resource_type'] != Log::TYPE_PROJECT): ?>
                    <?= _T('in_project') ?>
                    <?= $this->projectLink($entry['project']['slug'], $entry['project']['name']) ?> 
                <?php endif ?>
            </div>
        </div>
    <?php endforeach ?>
</div>
